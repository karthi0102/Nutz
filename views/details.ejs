<% layout('layout/boilerplate.ejs') %>
<div class="container mt-5">
    <div class="row mt-5">
        <div class="col-md-12 col-lg-6 offset-3 mt-5">
            <div class="card shadow mt-5">
                <div class="card-body">
                    <h2 class="text-center display-5">Json Format</h2>
                    <form action="/json" method="post">
                        <div class="mb-3">
                            <label for="user" class="form-label">Name</label>
                            <input type="text" class="form-control" name="json[name]" id="user">
                        </div>
                        <div class="mb-3"
                            <label for="pass" class="form-label">Age</label>
                            <input type="number" name="json[age]" id="pass" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="street" class="form-label">STREET</label>
                            <input type="text" name="json[street]" id="street" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="city" class="form-label">CITY</label>
                            <input type="text" name="json[city]" id="city" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="pin" class="form-label">PINCODE</label>
                            <input type="text" name="json[pincode]" id="pin" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="dob" class="form-label">DOB</label>
                            <input type="text" name="json[dob]" class="form-control" id="dob">
                        </div>
                        <button class="btn btn-primary">
                               submit
                        </button>
                    </form>
                       
                </div>
            </div>
        </div>
    </div>
</div>